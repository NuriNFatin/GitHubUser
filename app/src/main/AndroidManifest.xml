<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_ghb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_ghb"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUser"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.FavoriteActivity"
            android:exported="true"
            android:parentActivityName=".ui.view.MainActivity"/>
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.DetailActivity"
            android:exported="true" />
    </application>

</manifest>